<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.prts.arkmusic">

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_arkmusic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_arkmusic_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArkMusic"
        tools:replace="android:icon,android:theme">
        <service
            android:name=".ms3"
            android:enabled="true"
            android:exported="false"></service>
        <service
            android:name=".ms2"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".MusicService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".specialService"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ArkMusic.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>